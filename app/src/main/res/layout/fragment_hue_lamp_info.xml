<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HueLampInfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lamp_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lamp id"
            app:layout_constraintBottom_toTopOf="@+id/button_on_off"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_on_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On/Off"
            app:layout_constraintBottom_toTopOf="@+id/lamp_hue"
            app:layout_constraintEnd_toEndOf="@+id/lamp_id"
            app:layout_constraintStart_toStartOf="@+id/lamp_id"
            app:layout_constraintTop_toBottomOf="@+id/lamp_id" />

        <TextView
            android:id="@+id/lamp_hue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hue"
            app:layout_constraintBottom_toTopOf="@+id/lamp_id"
            app:layout_constraintEnd_toEndOf="@+id/button_on_off"
            app:layout_constraintStart_toStartOf="@+id/button_on_off"
            app:layout_constraintTop_toBottomOf="@+id/button_on_off" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>